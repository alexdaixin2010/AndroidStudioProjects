<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:grid="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
                  grid:layout_columnWeight="1"
                  android:paddingBottom="@dimen/order_detail_item_margin"
                  android:paddingLeft="@dimen/order_detail_item_margin"
                  android:paddingRight="@dimen/order_detail_item_margin"
                  android:paddingTop="@dimen/order_detail_item_margin"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/remove_item_button"
            android:layout_width="@dimen/order_detaill_item_title_font"
            android:layout_height="@dimen/order_detaill_item_title_font"
            android:scaleType="fitXY"
            android:layout_marginRight="10dp"
            android:src="@drawable/close"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
            android:id="@+id/order_detail_item_attribute_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salad"
            android:textColor="@color/black_99"
            android:textSize="@dimen/order_detaill_item_categoryt_font"/>

        <TextView
            android:id="@+id/order_detail_item_attribute_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Green Salad"
            android:textColor="@color/black_99"
            android:textSize="@dimen/order_detaill_item_title_font"/>

            </LinearLayout>
</LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_grey"
        android:paddingTop="@dimen/divider_padding"
        android:paddingBottom="@dimen/divider_padding"
        android:orientation="horizontal"/>
    </LinearLayout>

